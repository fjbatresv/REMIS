{%extends '::base.html.twig'%}
{%block body%}
<!-- left column -->
<div class="col-md-12">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Cambio de clave</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form method="POST" action="{{path('cambio_clave', {'pk' : pk})}}" novalidate="">
            <div class="box-body">
                <div class="form-group">
                    <label>Ingrese clave anterior</label>
                    {{form_widget(form.clave_old)}}
                    <p class="help-block">{{form_errors(form.clave_old)}}</p>
                </div>
                <div class="form-group">
                    <label>Ingrese la nueva clave</label>
                    {{form_widget(form.clave.first)}}
                    <p class="help-block">{{form_errors(form.clave.first)}}</p>
                </div>
                <div class="form-group">
                    <label>Repita la nueva clave</label>
                    {{form_widget(form.clave.second)}}
                    <p class="help-block">{{form_errors(form.clave.second)}}</p>
                </div>
                
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Cambiar clave</button>
            </div>
    {{form_rest(form)}}
        </form>
    </div>
</div>

{%endblock%}
